
# configure directories
config-dir = /opt/tls-playground/certbot/

# configure acme server
server = ${TP_ACME_SERVER_URL}

# configure acme account
agree-tos = true
email = ${TP_ACME_ACCOUNT_EMAIL}
register-unsafely-without-email = true
eff-email = false

# configure acme challenge authenticator
#authenticator = manual
authenticator = webroot
webroot-path = /opt/tls-playground/acme/challenges-nginx/public/

# configure cryptography
key-type = ecdsa
elliptic-curve = secp384r1
#key-type = rsa
#rsa-key-size = 4096
