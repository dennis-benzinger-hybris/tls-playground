[ req ]

prompt = no
utf8 = yes
default_md = sha384
encrypt_key = yes

distinguished_name = req_distinguished_name
req_extensions = req_extensions

[ req_distinguished_name ]

C = DE
ST = Bavaria
L = Munich
O  = TLS Playground
CN = tls-playground.${TP_SERVER_DOMAIN}

[ req_extensions ]

subjectAltName=@alt_names

[ alt_names ]

DNS.1 = tls-playground.${TP_SERVER_DOMAIN}

